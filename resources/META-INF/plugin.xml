<idea-plugin>
  <id>qsplug</id>
  <name>Quokka Script</name>
  <version>1.0</version>
  <vendor email="none" url="https://track.quokka.pub/issue/CORE-229">YouTrack task</vendor>

  <description><![CDATA[
      pre Alpha version
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.lang</depends>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <fileTypeFactory implementation="com.quokka_script.QuokkaFileTypeFactory"/>
    <lang.parserDefinition language="Quokka Script" implementationClass="com.quokka_script.QuokkaParserDefinition"/>
    <lang.syntaxHighlighterFactory language="Quokka Script" implementationClass="com.quokka_script.QuokkaSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="com.quokka_script.QuokkaColorSettingsPage"/>
    <codeStyleSettingsProvider implementation="com.quokka_script.QuokkaCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider implementation="com.quokka_script.QuokkaLanguageCodeStyleSettingsProvider"/>
    <lang.formatter language="Quokka Script" implementationClass="com.quokka_script.QuokkaFormatingModelBuilder" />

  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="template_handler" class="com.quokka_script.TemplateHandler" text="QuokkaScript file"
            description="Creates a new QuokkaScript file">
      <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewCoffeeScriptFile"/>
    </action>
  </actions>
  <application-components>
    <component>
      <implementation-class>com.quokka_script.TemplateCreator</implementation-class>
    </component>
  </application-components>
</idea-plugin>